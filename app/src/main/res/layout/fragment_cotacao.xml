                android:textColor="#F4F0ED"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/cot_libra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
